<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.navigation.ProfileFragment">

    <!--  Already Login  .-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/ProfileTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/screen_width_margin"
            android:layout_marginTop="@dimen/screen_title"
            android:layout_marginEnd="250dp"
            android:layout_marginBottom="664dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Profile"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ProfileImage"
            android:layout_width="96dp"
            android:layout_height="87dp"
            android:layout_marginStart="@dimen/screen_width_margin"
            android:layout_marginTop="48dp"
            android:src="@drawable/baseline_account_circle_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ProfileTitle" />

        <TextView
            android:id="@+id/ProfileName"
            android:layout_width="100dp"
            android:layout_height="34dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="@dimen/screen_width_margin"
            android:fontFamily="@font/montserrat"
            android:text="User72"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ProfileImage"
            app:layout_constraintTop_toBottomOf="@+id/ProfileTitle" />

        <View
            android:id="@+id/Divider1"
            android:layout_width="0dp"
            android:layout_height="1dp"

            android:layout_marginStart="@dimen/screen_width_margin"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/screen_width_margin"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ProfileAccount" />

        <View
            android:id="@+id/Divider2"
            android:layout_width="0dp"
            android:layout_height="1dp"

            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="24dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SignOut" />

        <TextView
            android:id="@+id/ProfileAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_marginTop="24dp"
            android:text="Account"
            android:textSize="@dimen/profile_font"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/materialToolbar" />

        <TextView
            android:id="@+id/SignOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="Sign Out"
            android:textSize="@dimen/profile_font"
            app:layout_constraintBottom_toTopOf="@+id/Divider2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Divider1" />

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/materialToolbar"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginStart="@dimen/screen_width_margin"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="@dimen/screen_width_margin"
            android:layout_marginBottom="16dp"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintBottom_toTopOf="@+id/ProfileAccount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ProfileImage" />

        <ImageView
            android:id="@+id/IconSighOut"
            android:layout_width="41dp"
            android:layout_height="32dp"
            android:layout_marginEnd="@dimen/screen_width_margin"
            android:src="@drawable/icon_logout"
            app:layout_constraintBottom_toTopOf="@+id/Divider2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Divider1" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>