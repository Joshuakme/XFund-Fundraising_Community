<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screens.PaymentMethodFragment">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/screen_width_margin"
            android:layout_marginTop="24dp"
            android:contentDescription="@string/back_button"
            android:src="@drawable/baseline_chevron_left_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/paymentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:text="@string/payment_method_title"
            android:textSize="@dimen/screen_title"
            app:layout_constraintStart_toEndOf="@+id/backBtn"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/paymentDetailNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/screen_width_margin"
            android:layout_marginTop="40dp"
            android:text="@string/payment_detail_name_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backBtn" />

        <EditText
            android:id="@+id/paymentDetailnameTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/screen_width_margin"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/screen_width_margin"
            android:gravity="center|left"
            android:padding="8dp"
            android:text="@string/payment_detail_name_sample"
            android:textSize="@dimen/form_input_value"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/paymentDetailNameLabel" />

        <TextView
            android:id="@+id/paymentDetailNoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/screen_width_margin"
            android:layout_marginTop="24dp"
            android:text="@string/card_detail_no_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/paymentDetailnameTxt" />

        <TextView
            android:id="@+id/paymentDetailNoTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/screen_width_margin"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/screen_width_margin"
            android:gravity="center|left"
            android:padding="8dp"
            android:text="@string/payment_detail_no_sample"
            android:textSize="@dimen/form_input_value"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/paymentDetailNoLabel" />

        <Switch
            android:id="@+id/paymentDetailDefaultSwitch"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="@dimen/screen_width_margin"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="@dimen/screen_width_margin"
            android:text="@string/payment_detail_default_card"
            android:textAlignment="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/paymentDetailNoTxt" />

        <Button
            android:id="@+id/paymentMethodDeleteBtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/payment_button_height"
            android:layout_marginStart="@dimen/screen_width_margin"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/screen_width_margin"
            android:backgroundTint="@android:color/transparent"
            android:text="@string/payment_detail_delete_txt"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/paymentMethodUpdateBtn" />

        <Button
            android:id="@+id/paymentMethodUpdateBtn"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="@dimen/screen_width_margin"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="@dimen/screen_width_margin"
            android:text="@string/payment_method_detail_update"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/paymentDetailDefaultSwitch" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>