<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="project"
            type="com.example.xfund.model.Project" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/ProjectAdminCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="16dp"
        app:cardElevation="7dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ProjectAdminCardImage"
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:contentDescription="cover"
                    android:scaleType="centerCrop"
                    android:src="@{project.cover}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/ProjectAdminCardEditButton"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="12dp"
                    android:paddingTop="9dp"
                    android:paddingEnd="18dp"
                    android:paddingBottom="9dp"
                    android:background="@color/EditButtonBackgroundColor"
                    app:layout_constraintEnd_toEndOf="@+id/ProjectAdminCardImage"
                    app:layout_constraintTop_toTopOf="parent">

<!--                    <ImageView-->
<!--                        android:id="@+id/ProjectAdminCardEditButtonImage"-->
<!--                        android:layout_width="24dp"-->
<!--                        android:layout_height="24dp"-->
<!--                        android:layout_marginEnd="5dp"-->
<!--                        app:tint="@color/EditButtonColor"-->
<!--                        app:layout_constraintEnd_toEndOf="parent"-->
<!--                        app:layout_constraintTop_toTopOf="parent"-->
<!--                        app:srcCompat="@drawable/icon_edit_50"/>-->

                    <TextView
                        android:id="@+id/ProjectAdminCardEditButtonText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Edit"
                        android:textColor="@color/EditButtonColor"
                        android:textSize="18sp"
                        app:layout_constraintStart_toEndOf="@+id/ProjectAdminCardEditButtonImage"
                        app:layout_constraintTop_toTopOf="parent"  />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ProjectAdminCardDeleteButton"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="12dp"
                    android:paddingTop="9dp"
                    android:paddingEnd="18dp"
                    android:paddingBottom="9dp"
                    android:background="@color/DeleteButtonBackgroundColor"
                    app:layout_constraintEnd_toEndOf="@+id/ProjectAdminCardImage"
                    app:layout_constraintTop_toBottomOf="@id/ProjectAdminCardEditButton">

<!--                    <ImageView-->
<!--                        android:id="@+id/ProjectAdminCardDeleteButtonImage"-->
<!--                        android:layout_width="24dp"-->
<!--                        android:layout_height="24dp"-->
<!--                        android:layout_marginEnd="5dp"-->
<!--                        app:tint="@color/DeleteButtonColor"-->
<!--                        app:layout_constraintEnd_toEndOf="parent"-->
<!--                        app:layout_constraintTop_toTopOf="parent"-->
<!--                        app:srcCompat="@drawable/icons_delete_30"/>-->

                    <TextView
                        android:id="@+id/ProjectAdminCardDeleteButtonText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Delete"
                        android:textColor="@color/DeleteButtonColor"
                        android:textSize="18sp"
                        app:layout_constraintStart_toEndOf="@+id/ProjectAdminCardDeleteButtonImage"
                        app:layout_constraintTop_toTopOf="parent"  />

                </LinearLayout>



            </androidx.constraintlayout.widget.ConstraintLayout>




            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/CardTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="start"
                android:lines="1"
                android:text="@{project.name}"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/CardDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="start"
                android:lines="2"
                android:text="@{project.description}"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/CardProgressBarText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textSize="30sp"
                    android:text="@{@string/add_percentage_behind(project.percentageValue)}"
                    android:textColor="@color/design_default_color_primary" />

                <TextView
                    android:id="@+id/percentageSymbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="%"
                    android:textColor="@color/design_default_color_primary"/>



            </LinearLayout>

            <ProgressBar
                android:id="@+id/CardProgressBar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:max="100"
                android:progress="@{project.percentage}"
                android:progressTint="@color/design_default_color_primary"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</layout>