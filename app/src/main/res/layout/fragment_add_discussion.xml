<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="3dp"
    tools:context=".screens.community.AddDiscussionFragment">


    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/screen_width_margin"
        android:layout_marginTop="24dp"
        android:background="#00FFFFFF"
        android:contentDescription="Back Button"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragmentTitle"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="@string/fragment_title_community"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/backButton"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleLblTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/form_screen_horizontal_margin"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="@string/title_label_txt"
        android:textColor="@color/black"
        android:textSize="@dimen/form_input_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backButton" />

    <EditText
        android:id="@+id/titleTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/form_screen_horizontal_margin"
        android:layout_marginEnd="@dimen/form_screen_horizontal_margin"
        android:autofillHints="title"
        android:hint="@string/title_hint_txt"
        android:inputType="textCapSentences|textAutoCorrect"
        android:textSize="@dimen/form_input_value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleLblTxt" />

    <TextView
        android:id="@+id/descLblTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/form_screen_horizontal_margin"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/montserrat_semibold"
        android:paddingStart="3dp"
        android:text="@string/desc_label_txt"
        android:textColor="@color/black"
        android:textSize="@dimen/form_input_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTxt" />

    <EditText
        android:id="@+id/descTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/form_screen_horizontal_margin"
        android:layout_marginEnd="@dimen/form_screen_horizontal_margin"
        android:autofillHints="Discussion Description"
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/desc_hint_txt"
        android:includeFontPadding="false"
        android:inputType="textMultiLine"
        android:lineSpacingExtra="0dp"
        android:textSize="@dimen/form_input_value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descLblTxt" />

    <TextView
        android:id="@+id/tagsLblTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/form_screen_horizontal_margin"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/montserrat_semibold"
        android:paddingStart="3dp"
        android:text="@string/tags_label_txt"
        android:textColor="@color/black"
        android:textSize="@dimen/form_input_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descTxt" />

    <EditText
        android:id="@+id/tagsTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/form_screen_horizontal_margin"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="@dimen/form_screen_horizontal_margin"
        android:hint="@string/tags_hint_txt"
        android:inputType="textFilter|textAutoCorrect"
        android:textSize="@dimen/form_input_value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tagsLblTxt" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/form_screen_horizontal_margin"
        android:layout_marginTop="26dp"
        android:backgroundTint="@color/accent_primary_300"
        android:text="@string/add_discussion_submit_button"
        android:textSize="11sp"
        android:visibility="visible"
        app:cornerRadius="@dimen/button_radius"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tagsTxt" />
</androidx.constraintlayout.widget.ConstraintLayout>